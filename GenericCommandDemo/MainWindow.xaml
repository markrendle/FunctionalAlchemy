<Window x:Class="GenericCommandDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   FontSize="24"
                   Text="{Binding DisplayText}" />
        <Button Grid.Row="1"
                FontSize="24"
                Command="{Binding DemoCommand}">I'm bound to an ICommand</Button>
    </Grid>
</Window>
